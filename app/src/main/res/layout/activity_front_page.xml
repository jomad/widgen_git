<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_front_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_material"
    tools:context="com.example.android.widgenV1.FrontPage">


    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@color/lineColor">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">



                <Button
                    android:id="@+id/weed_id"
                    style="@style/MainButtonStyle"
                    android:layout_above="@+id/search"
                    android:background="@drawable/mybutton"
                    android:onClick="weed_id_activity"
                    android:text="@string/identify" />
                <Button
                    android:id="@+id/search"
                    style="@style/MainButtonStyle"
                    android:layout_centerInParent="true"
                    android:background="@drawable/mybutton"
                    android:onClick="browse_list"
                    android:text="@string/search_by_name" />


                <Button
                    android:id="@+id/skills"
                    style="@style/MainButtonStyle"
                    android:layout_below="@+id/search"
                    android:background="@drawable/mybutton"
                    android:onClick="go_skills"
                    android:text="@string/skills_test" />

                <Button
                    android:id="@+id/about"
                    style="@style/MainButtonStyle"
                    android:layout_below="@+id/skills"
                    android:background="@drawable/mybutton"
                    android:onClick="about_app"
                    android:text="@string/about_us"
                    android:elevation="8dp"/>

                <ImageView
                    android:layout_width="118dp"
                    android:layout_height="75dp"
                    android:layout_below="@+id/about"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:adjustViewBounds="false"
                    android:contentDescription=""
                    android:scaleType="fitCenter"
                    android:src="@drawable/commelina_icon"
                    tools:ignore="ContentDescription" />


            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:adjustViewBounds="true"
                android:elevation="4dp"
                android:maxHeight="370dp"
                android:maxWidth="400dp"
                android:scaleType="fitCenter"
                android:src="@drawable/frame_png" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>

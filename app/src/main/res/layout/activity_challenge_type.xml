<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_challenge_type"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/lineColor"
    tools:context="com.example.android.widgenV1.ChallengeType">

    <include
        android:id="@+id/toolbar"
        layout="@layout/tool_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:paddingStart="24dp"
        android:paddingEnd="16dp"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/first_challenge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/challenge_one"
            android:paddingTop="8dp"
            android:paddingLeft="8dp"
            android:clickable="true"
            android:onClick="challenge_one"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/second_challenge"
            android:layout_marginTop="24dp"
            android:clickable="true"
            android:onClick="challenge_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="@string/challenge_two"
            android:paddingTop="8dp"
            android:paddingLeft="8dp" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:elevation="4dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/check_answer"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_alignParentStart="true"
                android:onClick="back_previous"
                android:clickable="true" />



        </RelativeLayout>
    </FrameLayout>

    </LinearLayout>




